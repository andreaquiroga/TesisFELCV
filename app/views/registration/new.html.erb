
	<center><h2>REGISTRARSE</h2></center><br/>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  	<%= devise_error_messages! %>
	  <div class="form-group">
	  	  <div class="col-lg-1">
	  	  </div>
	  	  <div class="col-lg-11">              
              <label>Email:</label>
		  	  <%= f.email_field :email, autofocus: true, :class=>"form-control"  %>
		      <label>Contrasenia:</label>
	    	  <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
		      <label>Confirmacion contrasenia:</label>
	    	  <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
		      <label>Rol de usuario:</label>
	    	  <%=f.collection_select :role, Role.all, :name, :name, {prompt: "-Seleccionar un rol-"}, {class:"form-control"} %><br/>
	          <div><%= f.submit "Guardar", :class=>"btn btn-primary" %></div><br/>
    	  </div>  
      </div>      
    <% end %>

    <%= render "devise/shared/links" %>

    <script type="text/javascript">
  		$(document).ready(function(){
    	$('[data-behaviour~=datepicker]').datepicker();
  		})
	</script>
