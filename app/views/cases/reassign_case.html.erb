			<% @users.each do |u| %>
			<option value="<%=u.id%>"><%=u.name+" "+u.paternal_last_name%></option>
			<% end %>
		</select><br/><br/>
		<input type="submit" value="Reasignar" class="btn btn-primary">
	</form>
	</div>
	</div>
</div>