		  <div class="modal" id="basicModal">
		  <div class="modal-dialog">
		    <div class="modal-content">
		    <%= form_for @item, :url => { :action => :create_item }, :method=>'get' do |i| %>
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		        <h4 class="modal-title">Nuevo Objeto</h4>
		      </div>
		      <div class="modal-body">
		       <label>Nombre: </label><p><%= i.text_field :name, :class=>'form-control' %></p>
		       <label>Descripcion: </label><p><%= i.text_field :description, :class=>'form-control' %></p>
		       <label>Lugar: </label><p><%= i.text_field :place, :class=>'form-control' %></p>
		      </div>
		      <div class="modal-footer">
		        <div><%= i.submit "Añadir", :name=>'add', :class=>"btn btn-primary" %></div>
		      </div>
		    <%end%>
		    </div>
		  </div>
		  </div>