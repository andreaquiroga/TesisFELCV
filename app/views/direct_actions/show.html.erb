<div class="row">
  <div class="col-lg-2">
  	<%= render :partial => 'layouts/left_menu' %>
  </div>
  <div class="col-lg-10">
  <div class="jumbotron">
    <div class="row">
      <div class="col-lg-1">  
      </div>
      <div class="col-lg-10">
      	<%= render :partial => 'layouts/case_facts' %>
      	<center><h3>FORMULARIO DE ACCION DIRECTA</h3></center><br/>
      	<u><h4><strong>POLICIA INTERVINIENTE</strong></h4></u>
      	<h5>
		  <strong>Nombre:</strong>
		  <%= @direct_action.police_name %>
		</h5>
		<h5>
		  <strong>CI:</strong>
		  <%= @direct_action.police_ci %>
		</h5>
		<h5>
		  <strong>Telefono:</strong>
		  <%= @direct_action.police_phone %>
		</h5>
		<h5>
		  <strong>Unidad:</strong>
		  <%= @direct_action.police_station %>
		</h5>
		<h5>
		  <strong>Sigla:</strong>
		  <%= @direct_action.station_acronym %>
		</h5>
		<h5>
		  <strong>Zona Unidad:</strong>
		  <%= @direct_action.station_zone %>
		</h5><br/>
		<u><h4><strong>DATOS DEL HECHO</strong></h4></u>
		<h5><strong>Fecha:</strong>
		  <%= @direct_action.fact_date %>
		</h5>
		<h5>
		  <strong>Hora:</strong>
		  <%= @direct_action.fact_time %>
		</h5>
		<h5>
		  <strong>Lugar:</strong>
		  <%= @direct_action.place %>
		</h5>
		<h5>
		  <strong>Naturaleza:</strong>
		  <%= @direct_action.nature %>
		</h5>
		<h5>
		  <strong>Relato del Hecho:</strong>
		  <h5 align="justify"><%= @direct_action.cincunstancial_relation %></h5>
		</h5><br/>
		<u><h4><strong>OBJETOS</strong></h4></u>
		<% if @direct_action.items!=nil %>
          <ul class="list-group"> 
	      <%@direct_action.items.each do |p|%>
	    	<li class="list-group-item">
  		    <h5>Nombre.- <%=p.name%></h5>
  			<h5>Descripcion.- <%=p.description%></h5>
  			<h5>Lugar.- <%=p.place%></h5>
			</li>
		  <%end%>
		  </ul>
		<% else %>
		  <h5>No existen objetos registrados</h5>
		<% end %>
      <br/><br/>
      <%if @direct_action.sign == nil %>
		<form class="navbar-form navbar-left" method="get" action=<%= edit_direct_action_path(@direct_action.id)%> >
		                <button type="submit" class="btn btn-primary">
		                  <span class="glyphicon glyphicon-edit" style="vertical-align:-1px;  margin-right:7px; "></span> 
		                  Editar
		                </button>
		</form>
		<form class="navbar-form navbar-left" method="get" action=<%= private_key_direct_action_path(@direct_action.case_id)%> >
		    <button type="submit" class="btn btn-primary">
		    <span class="glyphicon glyphicon-barcode" style="vertical-align:-1px;  margin-right:7px; "></span> 
		    Firmar Digitalmente
		  </button>
		</form>
		<%else%>
		<h4><span class="glyphicon glyphicon-cloud-download"></span>&nbsp;&nbsp;<a href="<%=@direct_action.direct_action_signed.url(download: true)%>">Descargar Direct Action Firmada</a></h4>
		<%end%>
      </div>
    </div>
   </div>
  </div>
</div>