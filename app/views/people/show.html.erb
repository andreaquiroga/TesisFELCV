<div class="row">
  <div class="col-lg-2">
    <%= render :partial => 'layouts/left_menu' %>
  </div>
  <div class="col-lg-10">
  <div class="jumbotron">
    <div class="row">
      <div class="col-lg-1">  
      </div>
      <div class="col-lg-10">
      	<%=render :partial => 'layouts/case_facts'%>
		<br/><br/>
		<%= image_tag("police.jpg", :height=>"80", :width=>"70", :align=>"left") %><%= image_tag("bpaf.png", :height=>"80", :width=>"70", :align=>"right") %><br/><center><h2><%=@link.role%></h2></center><br/><br/>
		<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
		<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
		  
		  
		  Ci:
		  <label><%= @person.ci %></label><br/>
		  Nombre:
		  <label><%= @person.name %></label><br/>
		  Apellido Paterno:
		  <label><%= @person.paternal_last_name %></label><br/>
		  Apellido Materno:
		  <label><%= @person.maternal_last_name %></label><br/>
		  Fecha de nacimiento:
		  <label><%= @person.birthdate %></label><br/>
		  Direccion:
		  <label><%= @location_home.address%></label><br/>
		      <div style='width: 800px;'>
		        <div id="map" style='width: 500px; height: 300px;'></div>
		      </div>
		     <script type="text/javascript">
		      handler = Gmaps.build('Google', { markers: { maxRandomDistance: null } });
		      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		        markers = handler.addMarkers(<%=raw @hash1.to_json %>);
		        handler.bounds.extendWith(markers);
		        handler.fitMapToBounds();
		        handler.getMap().setZoom(15);
		      });
		      </script>
		      <br/>
		  Ocupacion/Profesion:
		  <label><%= @person.ocupation %></label><br/>
		  Genero:
		  <label><%= @person.gender %></label><br/>
		  Telefono:
		  <label><%= @person.phone %></label><br/>
		  Celular:
		  <label><%= @person.mobile %></label><br/>
		  Estado civil:
		  <label><%= @person.civil_status %></label><br/>
		  Nacionalidad:
		  <label><%= @person.nationality %></label><br/>
		  Natural de:
		  <label><%= @person.natural_of %></label><br/>
		  Lugar deTrabajo:
		  <label><%= @person.work %></label><br/>
		  Telefono de Trabajo:
		  <label><%= @person.work_phone %></label><br/>
		  Direccion Trabajo:
		  <label><%= @location_work.address%></label><br/>
		      <div style='width: 800px;'>
		        <div id="map1" style='width: 500px; height: 300px;'></div>
		      </div>
		      <script type="text/javascript">
		      handler1 = Gmaps.build('Google', { markers: { maxRandomDistance: null } });
		      handler1.buildMap({ provider: {}, internal: {id: 'map1'}}, function(){
		        markers1 = handler1.addMarkers(<%=raw @hash2.to_json %>);
		        handler1.bounds.extendWith(markers1);
		        handler1.fitMapToBounds();
		        handler1.getMap().setZoom(15); 
		      });

		      </script><br/><br/>
		      <h4><span class="glyphicon glyphicon-th"></span>&nbsp;&nbsp;OTRAS DENUNCIAS CON LA PERSONA INVOLUCRADA</h4>
              <div class="list-group">
              <%if @links != nil%>
                <% @links.each do |a| %>
                  <%if a.case_id != @case.id %>
                  <a href= class="list-group-item active">
                    <h5 class="list-group-item-heading"><%= a.case.code %></h5></a>
                    <b><h5 class="list-group-item-heading"><%= a.role %></h5></a></b>
                  <%end%>    
                <%end%>
                <%else%>
                <h6 class="list-group-item-heading">"No hay casos relacionados"</h6>
               <%end%>
               </div>
			<br/>
		
		   <%= link_to 'Editar', edit_person_path(@link.id) %>
		
		</div>
		
		</div>
	</div>
	</div>
