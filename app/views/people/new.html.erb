<div class="row">
  <div class="col-lg-2">
    <%= render :partial => 'layouts/left_menu' %>
  </div>
  <div class="col-lg-10">
  <div class="jumbotron">
    <div class="row">
      <div class="col-lg-1">  
      </div>
      <div class="col-lg-10">
      <%= render :partial => 'layouts/case_facts' %>
        <center><h3>REGISTRAR PERSONA INVOLUCRADA (Parte 1)</h3></center>
        <%= form_for @person , :url => { :action => :create }, :method=>'post' do |f| %>
          <% if @person.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@person.errors.count, "errorre") %> encontrados:</h2>
                <ul>
                <% @person.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.fields_for @link do |l| %>
            <%= l.hidden_field  :id, :class=>"form-control"%>
            
            <%= l.hidden_field  :case_id , :class=>"form-control"%>
            <label><b>Relacion con el Caso:</b></label>      
            <%= l.collection_select :role, PersonRole.all, :text, :text, {prompt: "-Seleccionar un papel-"}, {class:"form-control"} %><br/>
          <%end%>
          <%= f.hidden_field  :id %>
        	<label>CI:</label>
        	<%= f.text_field :ci , :class=>"form-control"%>
          <label>Nombre:</label>
          <%= f.text_field :name , :class=>"form-control"%>
          <label>Apellido Paterno:</label>
          <%= f.text_field :paternal_last_name , :class=>"form-control"%>
          <label>Apellido Materno:</label>
        	<%= f.text_field :maternal_last_name , :class=>"form-control"%>
        	<label>Fecha de nacimiento:</label>
        	<%= f.text_field :birthdate, 'data-behaviour' => 'datepicker' , :class=>"form-control"%>
        	<label>Genero:</label>
          <%= f.collection_select :gender, Gender.all, :text, :text, {prompt: "-Seleccionar un genero-"}, {class:"form-control"} %><br/>
          <label>Estado Civil:</label>
          <%= f.collection_select :civil_status, CivilStatus.all, :name, :name, {prompt: "-Seleccionar un estado civil-"}, {class:"form-control"} %><br/>
          <label>Nacionalidad:</label>   
          <%= f.text_field :nationality , :class=>"form-control"%>
          <label>Ciudad de Nacimiento:</label>
          <%= f.text_field :natural_of , :class=>"form-control"%>
          <label>Telefono:</label>
          <%= f.text_field :phone , :class=>"form-control"%>
          <label>Celular:</label>
          <%= f.text_field :mobile , :class=>"form-control"%><br/>               
          <label>Direccion:</label>
          <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
          <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
          <div style='width: 800px;'>
            <div id="map" style='width: 600px; height: 400px;'></div>
          </div>
          <script type="text/javascript">
            handler = Gmaps.build('Google', { markers: { maxRandomDistance: null } });
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

            markers = handler.addMarkers([
              {
                "lat":   -17.39435,
                "lng": -66.16435,
                "infowindow": "Cochabamba, Bolivia"
              }
                ]);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                handler.getMap().setZoom(15);
                google.maps.event.addListener(handler.getMap(), "dblclick", function( evt ) {
                document.getElementById("home_latitude").value=evt.latLng.lat();
                document.getElementById("home_longitude").value=evt.latLng.lng();
                handler.removeMarkers(markers);
                markers = handler.addMarkers([
                  {
                    "lat":   evt.latLng.lat(),
                    "lng": evt.latLng.lng(),
                    "infowindow": "Enviar aqui!"
                  }
                ]);                             
              });
            });
            </script><br/>
            <%= f.fields_for @location_home do |o| %>
              <%= o.text_field :address, :class=>"form-control" %>
              <%= o.hidden_field :place %>
              <%= o.hidden_field :longitude, :id=>'home_longitude' %>
              <%= o.hidden_field :latitude, :id=>'home_latitude' %>
            <%end%> <br/>   
        	   <div><%= f.submit "Continuar >", :class=>"btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker({
                maxDate: '+1m',
                minDate: '-20d',
                });

  })
</script>



<script type="text/javascript">
  $("#person_ci").blur(function() {
  $.ajax({
    type: "GET",
    dataType: "json",
    url: "/people/person_exist/"+document.getElementById('person_ci').value,
    success: function(person){
        document.getElementById('person_name').value = person.name
        document.getElementById('person_name').disabled =  true
        document.getElementById('person_paternal_last_name').value = person.paternal_last_name
        document.getElementById('person_paternal_last_name').disabled = true
        document.getElementById('person_maternal_last_name').value = person.maternal_last_name
        document.getElementById('person_maternal_last_name').disabled = true
        document.getElementById('person_birthdate').value = person.birthdate
        document.getElementById('person_gender').value = person.gender
        document.getElementById('person_civil_status').value = person.civil_status
        document.getElementById('person_nationality').value = person.nationality
        document.getElementById('person_natural_of').value = person.natural_of
        document.getElementById('person_phone').value = person.phone
        document.getElementById('person_mobile').value = person.mobile
        
        $.ajax({
        type: "GET",
        dataType: "json",
        url: "/people/location_exist/"+person.location_home_id,
        success: function(location){
            document.getElementById('person_location_address').value = location.address
            document.getElementById('home_latitude').value = location.latitude            
            document.getElementById('home_longitude').value = location.longitude
            handler.removeMarkers(markers);
            var a=document.getElementById('home_latitude').value;
            var b=document.getElementById('home_longitude').value;
            markers = handler.addMarkers([
            {
               "lat":  a ,
              "lng": b,
                "infowindow": "aca esta!"
            }
          ]);
        }
    });
    }
});
});
</script>
