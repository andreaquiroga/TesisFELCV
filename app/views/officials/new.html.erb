<center><h2>REGISTRARSE</h2></center><br/>
  <%= form_for @official, :url => { :action => :create }, :method=>'post' do |o|%>
  	<% if @official.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@official.errors.count, "errorre") %> encontrados:</h2>
          <ul>
          <% @official.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
	  <div class="row">
	  	  <div class="col-lg-1">
	  	  </div>
	  	  <div class="col-lg-11">
	        <%= o.hidden_field  :id, :value=>true %>
          <%= o.text_field  :user_id %>
          <label>CI:</label>
          <%= o.text_field :ci, :class=>'form-control' %>
          <label>Nombre:</label>
          <%= o.text_field :name, :class=>'form-control' %>
          <label>Apellido Paterno:</label>
          <%= o.text_field :paternal_last_name, :class=>'form-control' %>
          <label>Apellido Materno:</label>
          <%= o.text_field :maternal_last_name, :class=>'form-control' %>
          <label>Fecha Nacimiento:</label>
          <%= o.text_field :birthdate, 'data-behaviour' => 'datepicker', :class=>'form-control'%>
          <label>Grado:</label>
          <%=o.collection_select(:grade, Grade.all, :name, :name, {prompt: "-Seleccionar un grado-"}, {class:"form-control"})%>
          <br/>
          <label>Direccion:</label>
          <%= o.text_field :address, :class=>'form-control' %>
          <label>Ultimo Destino:</label>
          <%= o.text_field :last_work, :class=>'form-control' %>
          <label>Telefono:</label>
          <%= o.text_field :phone, :class=>'form-control' %>
          <label>Celular:</label>
          <%= o.text_field :mobile, :class=>'form-control' %>
          <label>Ingreso a la Institucion:</label>
          <%= o.text_field :admission_date, 'data-behaviour' => 'datepicker', :class=>'form-control' %><br/>
          <div><%= o.submit "Guardar", :class=>"btn btn-primary" %></div><br/>
        </div>  
      </div>      
    <% end %>

    <script type="text/javascript">
      $(document).ready(function(){
      $('[data-behaviour~=datepicker]').datepicker();
      })
    </script>